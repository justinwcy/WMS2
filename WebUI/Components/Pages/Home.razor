@page "/"

<PageTitle>Home</PageTitle>

<MudPaper style="position: relative; min-height: 100vh; background-image: url('Welcome.jpg'); background-size: cover; background-repeat: no-repeat;">
    <MudGrid style="position: relative; z-index: 1;">
        <MudItem xs="12" Class="d-flex justify-center align-center">
            <MudText Typo="Typo.h3" GutterBottom="true">Welcome @CurrentStaff?.FirstName @CurrentStaff?.LastName !</MudText>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    private CurrentUserModel? CurrentStaff { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await InitializeData();
    }

    public async Task InitializeData()
    {
        CurrentStaff = await UserUtilities.GetCurrentUser(Mediator, AuthenticationStateProvider);
    }
}