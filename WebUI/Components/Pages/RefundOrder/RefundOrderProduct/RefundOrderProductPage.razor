@page "/refundOrderProduct"
@implements IMainPage
<RefundOrderProduct RefundOrderProductIds="RefundOrderProductIds" 
                    CurrentStaff="CurrentStaff" 
                    MainPage="MainPage" 
                    PageComponents="PageComponents"
                    ShowCreateButton="true"
                    ShowDeleteButton="true"/>

@code {
    private IMainPage MainPage => this;
    private List<IPageComponent> PageComponents = [];

    private List<Guid> RefundOrderProductIds { get; set; } = new List<Guid>();
    private CurrentUserModel CurrentStaff { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await InitializeData();
    }
    
    public async Task InitializeData()
    {
        CurrentStaff = await UserUtilities.GetCurrentUser(Mediator, AuthenticationStateProvider);

        var getAllRefundOrderProductIdsByCompanyIdQuery = new GetAllRefundOrderProductIdsByCompanyIdQuery(CurrentStaff.CompanyId);
        RefundOrderProductIds = await Mediator.Send(getAllRefundOrderProductIdsByCompanyIdQuery);
    }
}