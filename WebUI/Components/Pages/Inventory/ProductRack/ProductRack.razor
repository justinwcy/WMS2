
@inject IDialogService Dialog
@using Application.Service.Queries
@using WebUI.Components.Models
@using Application.Service.Commands
@using Application.DTO.Request
@using Application.DTO.Response
@using WebUI.Utilities
<MudGrid Class="mb-3">
    <MudItem xs="9">
        <MudButton OnClick="@DeleteProductRacks"
        Color="Color.Error"
        Variant="Variant.Filled"
        Size="Size.Large"
        FullWidth="false"
        Disabled="_disableDelete">
            Delete ProductRack
        </MudButton>
    </MudItem>
    <MudItem xs="3">
        <MudButton OnClick="@(OpenCreateProductRackDialogAsync)"
        Variant="Variant.Filled"
        Color="Color.Primary"
        Size="Size.Large"
        FullWidth="false">
            Create ProductRack
        </MudButton>
    </MudItem>
</MudGrid>

<MudTable Hover="true" Breakpoint="Breakpoint.Sm" FixedHeader="true"
Filter="new Func<ProductRackModel,bool>(FilterFunc)"
CanCancelEdit="true"
Items="@ProductRackModels"
GroupHeaderStyle="background-color:var(--mud-palette-background-gray)"
GroupFooterClass="mb-4"
Dense="true"
Loading="@_loading" LoadingProgressColor="Color.Info"
MultiSelection="true"
@bind-SelectedItems="_selectedProductRacks"
SelectOnRowClick="false"
CommitEditTooltip="Commit Edit"
CancelEditTooltip="Cancel Edit"
IsEditRowSwitchingBlocked="false"
RowEditPreview="BackupItem" RowEditCancel="ResetItemToOriginalValues"
RowEditCommit="ItemHasBeenCommitted"
ApplyButtonPosition="TableApplyButtonPosition.StartAndEnd"
EditButtonPosition="TableEditButtonPosition.StartAndEnd" EditTrigger="TableEditTrigger.RowClick"
@ref="_tableRef">

    <ToolBarContent>
        <MudText Typo="Typo.h6">ProductRacks</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <ColGroup>
        <col style="max-width: 50px" />
        <col style="max-width: 50px" />
        <col style="min-width: 150px" />
        <col style="min-width: 200px" />
        <col style="min-width: 100px" />
        <col style="min-width: 150px" />
        <col style="min-width: 100px" />
    </ColGroup>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortBy="new Func<ProductRackModel, object>(x=>x.Name)">Name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<ProductRackModel, object>(x=>x.Address)">Address</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<ProductRackModel, object>(x=>x.Platform)">Platform</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<ProductRackModel, object>(x=>x.Website)">Website</MudTableSortLabel></MudTh>
        <MudTh>Products</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd DataLabel="Website">@context.Website</MudTd>
        <MudTd DataLabel="Platform">@context.Platform</MudTd>
        <MudTd DataLabel="Products">
            <MudButton OnClick="@(() => ViewDialogUtilities.OpenProductDialogAsync(@context.ProductIds, CurrentStaff, Dialog))"
            Variant="Variant.Filled"
            Color="Color.Primary"
            Size="Size.Small"
            FullWidth="false">
                View (@context.ProductIds.Count)
            </MudButton>
        </MudTd>
    </RowTemplate>

    <RowEditingTemplate>
        <MudTd DataLabel="Name">
            <MudTextField @bind-Value="context.Name" Required />
        </MudTd>

        <MudTd DataLabel="Address">
            <MudTextField @bind-Value="context.Address" Required />
        </MudTd>

        <MudTd DataLabel="Website">
            <MudTextField @bind-Value="context.Website" Required />
        </MudTd>

        <MudTd DataLabel="Platform">
            <MudTextField @bind-Value="context.Platform" Required />
        </MudTd>

        <MudTd DataLabel="Products"></MudTd>
    </RowEditingTemplate>

    <PagerContent>
        <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100, int.MaxValue }"
        RowsPerPageString="Rows per page:"
        InfoFormat="{first_item}-{last_item} of {all_items}"
        AllItemsText="All"
        HorizontalAlignment="HorizontalAlignment.Right" />
    </PagerContent>
</MudTable>

@code {
    [Parameter]
    public List<Guid> ProductRackIds { get; set; } = new List<Guid>();
    public List<ProductRackModel> ProductRackModels { get; set; } = new List<ProductRackModel>();

    [Parameter]
    public GetStaffResponseDTO CurrentStaff { get; set; }

    private HashSet<ProductRackModel> _selectedProductRacks = new HashSet<ProductRackModel>();
    private bool _disableDelete => !_selectedProductRacks.Any();

    private bool _loading { get; set; }
    private string searchString = "";
    private MudTable<ProductRackModel> _tableRef;
    private ProductRackModel _productRackModelBeforeEdit { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        await base.OnParametersSetAsync();

        foreach (var productRackId in ProductRackIds)
        {
            var getProductRackByIdQuery = new GetProductRackByIdQuery(productRackId);
            var productRackDTO = await Mediator.Send(getProductRackByIdQuery);

            var productRackModel = new ProductRackModel()
            {
                ProductIds = productRackDTO.ProductIds,
                Platform = productRackDTO.Platform,
                Address = productRackDTO.Address,
                Id = productRackDTO.Id,
                Name = productRackDTO.Name,
                Website = productRackDTO.Website
            };

            ProductRackModels.Add(productRackModel);
        }
        _loading = false;
    }

    private bool FilterFunc(ProductRackModel productRackModel)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (productRackModel.Name.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (productRackModel.Address.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (productRackModel.Platform.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (productRackModel.Website.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    }

    private async Task DeleteProductRacks()
    {
        var success = true;
        foreach (var productRackModel in _selectedProductRacks)
        {
            var deleteProductRackCommand = new DeleteProductRackCommand(productRackModel.Id);
            var result = await Mediator.Send(deleteProductRackCommand);

            if (result.Success)
            {
                ProductRackModels.Remove(productRackModel);
            }

            success &= result.Success;
        }

        SnackBar.Add(success ? "ProductRacks Deleted" : "Failed to delete productRacks");
    }

    private void BackupItem(object productRackModel)
    {

        _productRackModelBeforeEdit = new ProductRackModel()
        {
            Id = ((ProductRackModel)productRackModel).Id,
            Name = ((ProductRackModel)productRackModel).Name,
            Address = ((ProductRackModel)productRackModel).Address,
            Platform = ((ProductRackModel)productRackModel).Platform,
            Website = ((ProductRackModel)productRackModel).Website,
            ProductIds = ((ProductRackModel)productRackModel).ProductIds,
        };
        StateHasChanged();
    }

    private void ResetItemToOriginalValues(object productRackModel)
    {
        ((ProductRackModel)productRackModel).Id = _productRackModelBeforeEdit.Id;
        ((ProductRackModel)productRackModel).Name = _productRackModelBeforeEdit.Name;
        ((ProductRackModel)productRackModel).Address = _productRackModelBeforeEdit.Address;
        ((ProductRackModel)productRackModel).Platform = _productRackModelBeforeEdit.Platform;
        ((ProductRackModel)productRackModel).Website = _productRackModelBeforeEdit.Website;
        ((ProductRackModel)productRackModel).ProductIds = _productRackModelBeforeEdit.ProductIds;

        StateHasChanged();
    }

    private async void ItemHasBeenCommitted(object productRackModel)
    {
        var productRackModelConverted = (ProductRackModel)productRackModel;
        var updateProductRackDTO = new UpdateProductRackRequestDTO()
        {
            CreatedBy = CurrentStaff.Id,
            Id = productRackModelConverted.Id,
            Name = productRackModelConverted.Name,
            Address = productRackModelConverted.Address,
            Platform = productRackModelConverted.Platform,
            Website = productRackModelConverted.Website,
            ProductIds = productRackModelConverted.ProductIds,
        };
        var updateProductRackCommand = new UpdateProductRackCommand(updateProductRackDTO);
        var response = await Mediator.Send(updateProductRackCommand);
        SnackBar.Add(response.Message);
        StateHasChanged();
    }

    private async Task OpenCreateProductRackDialogAsync()
    {
        var parameters = new DialogParameters<CreateProductRackDialog>()
        {
            { x => x.CurrentStaff,  CurrentStaff},
        };

        var options = Theme.DefaultCreateDialogOptions();
        var dialog = await Dialog.ShowAsync<CreateProductRackDialog>("Create ProductRack", parameters, options);
        var dialogResult = await dialog.Result;

        if (dialogResult != null && !dialogResult.Canceled && dialogResult.Data != null)
        {
            var productRackModelCreated = (ProductRackModel)dialogResult.Data;
            if (productRackModelCreated == null)
            {
                throw new Exception("ProductRack created is not recognized");

            }
            ProductRackModels.Add(productRackModelCreated);
            StateHasChanged();
            SnackBar.Add($"{productRackModelCreated.Name} created");
        }
    }
}

    