@page "/incomingOrderProduct"
@implements IMainPage
@using Application.DTO.Response
@using WebUI.Utilities
@using Application.Service.Queries

<IncomingOrderProduct IncomingOrderProductIds="IncomingOrderProductIds" 
    CurrentStaff="CurrentStaff" 
    MainPage="MainPage" 
    PageComponents="PageComponents"
    ShowCreateButton="true"
    ShowDeleteButton="true"/>

@code {
    private IMainPage MainPage => this;
    private List<IPageComponent> PageComponents = [];

    private List<Guid> IncomingOrderProductIds { get; set; } = new List<Guid>();
    private CurrentUserModel CurrentStaff { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await InitializeData();
    }
    
    public async Task InitializeData()
    {
        CurrentStaff = await UserUtilities.GetCurrentUser(Mediator, AuthenticationStateProvider);

        var getAllIncomingOrderProductIdsByCompanyIdQuery = new GetAllIncomingOrderProductIdsByCompanyIdQuery(CurrentStaff.CompanyId);
        IncomingOrderProductIds = await Mediator.Send(getAllIncomingOrderProductIdsByCompanyIdQuery);
    }
}
